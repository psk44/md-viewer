<h1>Documents</h1>

<%= form_with url: documents_path, method: :get, local: true do |form| %>
<%= form.text_field :query, placeholder: "Search..." %>
<%= form.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
    <tr>
      <td><%= document.title %></td>
      <td><%= markdown(document.content.truncate(100)) %></td>
      <td><%= link_to 'Show', document %></td>
      <td><%= link_to 'Edit', edit_document_path(document) %></td>
      <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Document', new_document_path %>